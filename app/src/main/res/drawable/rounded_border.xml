<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/white" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional: Soft border or shadow effect -->
    <stroke
        android:width="3dp"
        android:color="#126b33" />

    <!-- Optional: Padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
